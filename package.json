{
  "name": "dasharr",
  "version": "0.1.0",
  "private": true,
  "description": "Unified web application for *arr media server stack",
  "scripts": {
    "dev": "pnpm --parallel --filter api dev --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "build": "pnpm --filter api build && pnpm --filter web build",
    "build:api": "pnpm --filter api build",
    "build:web": "pnpm --filter web build",
    "start": "pnpm --filter api start",
    "lint": "pnpm --recursive lint",
    "type-check": "pnpm --recursive type-check",
    "docker:build": "docker build -t dasharr:latest -f docker/Dockerfile .",
    "docker:dev": "docker compose -f docker/docker-compose.dev.yml up",
    "docker:prod": "docker compose -f docker/docker-compose.yml up"
  },
  "keywords": [
    "radarr",
    "sonarr",
    "readarr",
    "prowlarr",
    "plex",
    "media-server",
    "dashboard"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.2.0",
    "typescript": "^5.6.0"
  }
}
